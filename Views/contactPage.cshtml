@using Umbraco.Cms.Web.Common.PublishedModels;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    Layout = "Master.cshtml";

}
<div class="form_div container">
    <div class="contact-form-container windows">

        <h2>טופס צור קשר</h2>
        <p class="fil">שדות שמסומנים בכוכבית הינם חובה</p>
        <form id="contactForm" class="general_form contact_form" novalidate="novalidate">
            <input type="text" class="form-func" value="Send_Mail" hidden="hidden">
            <input type="text" class="success-func" value="" hidden="hidden">
            <input type="text" class="failed-func" value="" hidden="hidden">
            <input type="text" class="popup-success" value="" hidden="hidden">
            <input type="text" class="popup-failed" value="" hidden="hidden">

            <div class="form-group">
                <label for="name">שם*</label>
                <input type="text" id="name" name="name" placeholder="שם" required="">


            </div>
            <div class="form-group">
                <label for="email_contact">מייל</label>
                <input type="text" name="email_contact" placeholder="דוא&quot;ל">

            </div>
            <div class="form-group">
                <label for="phone">טלפון*</label>
                <input type="tel" id="phone" name="phone" placeholder="טלפון" required="">

            </div>
            <div class="form-group">
                <label for="message">הודעה</label>
                <textarea id="message" name="message" placeholder="מעונין ב..." rows="5"></textarea>

            </div>
            <button type="submit" class="submit-button" id="submitButton" disabled="">
                שליחה
            </button>
        </form>


    </div>
    <img class="contact_img" src="https://res.cloudinary.com/dv3ucnxsv/image/upload/v1738519455/spj2qn2cly9lu9k8pvi1.png">

</div>